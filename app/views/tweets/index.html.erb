<div class="container">
  <h1>Welcome to Guppy:</h1><p> Eyes in the sea!</p>

  <form action="/tweets" method="POST">
    <input  class="btn btn-primary"  type="submit" value="Check for updates!">
  </form>

  <table class="table table-dark">
    
    <thead>
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">User Handle</th>
        <th scope="col">Message</th>
        <th scope="col">Sentiment</th>
        <th scope="col">Followers</th>
     </tr>
    </thead>

    <tbody>
  	  <% @tweets.each do |t| %>
        <tr data-toggle="modal" data-target="#viewTweet-<%= t.id %>" >
          <th scope="row"><%= t.user_id %></th>
          <td><%= t.user_handle %></td>
          <td><%= truncate(t.message, length:15) %> </td>
          <td><%= t.sentiment  %></td>
          <td><%= t.followers %></td>
        </tr>
        <%= render :partial => 'tweets/view_tweet_modal', :locals => {:t => t} %>
      <% end %>
    </tbody>

  </table>

</div>